<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".PetCareFragment">

    <!-- Logo (Tetap di atas) -->
    <ImageView
        android:layout_width="245dp"
        android:layout_height="172dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:src="@drawable/logobaru_nobg" />

    <!-- Wrapper for Centered Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <!-- CardView for Description -->
        <androidx.cardview.widget.CardView
            android:layout_width="340dp"
            android:layout_height="117dp"
            android:layout_gravity="center"
            android:alpha="0.7"
            app:cardBackgroundColor="@color/ungu_pastel_muda"
            app:cardCornerRadius="15dp">

            <TextView
                android:id="@+id/petCareDescription"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="16dp"
                android:text="Silahkan klik tombol dibawah untuk melihat jenis
perawatan!"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="visible" />
        </androidx.cardview.widget.CardView>

        <!-- CardView for Button -->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="0dp">

            <Button
                android:id="@+id/btnNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="90dp"
                android:text="Next"
                android:backgroundTint="@color/ungu_pastel_gelap"
                android:textColor="@color/white" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>
